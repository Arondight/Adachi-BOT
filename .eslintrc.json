{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:vue/essential"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["check-json-value", "import", "node", "promise", "sort-exports"],
  "rules": {
    "check-json-value/json-lint": [
      "error",
      {
        "lint": true
      }
    ],
    "check-json-value/json-value": [
      "error",
      [
        {
          "file": "resources(_custom)?/Version2/info/docs/.+\\.json",
          "path": "access",
          "values": ["^(祈愿|商城|纪行|探索|锻造|活动|联动)$"]
        },
        {
          "file": "resources(_custom)?/Version2/info/docs/.+\\.json",
          "path": "rarity",
          "values": ["^[3-5]$"]
        },
        {
          "file": "resources(_custom)?/Version2/info/docs/.+\\.json",
          "path": "time",
          "values": ["^【(周././.)|(每日)】$"]
        },
        {
          "file": "resources(_custom)?/Version2/info/docs/.+\\.json",
          "path": "type",
          "values": ["^(角色)|(武器)$"]
        }
      ]
    ],
    "sort-exports/sort-exports": ["error", { "sortDir": "asc" }],
    "sort-imports": [
      "error",
      {
        "ignoreCase": false,
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": ["all", "single", "multiple", "none"]
      }
    ],
    "vue/comment-directive": 0
  },
  "overrides": [
    {
      "files": ["*.yaml", "*.yml"],
      "plugins": ["yml"],
      "extends": ["plugin:yml/recommended"]
    },
    {
      "files": ["*.html"],
      "plugins": ["vue"]
    },
    {
      "files": ["*.json"],
      "plugins": ["check-json-value"]
    }
  ]
}
